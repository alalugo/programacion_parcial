@model IEnumerable<Nomina.Entities.Puestos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Puestos</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary active" role="button" aria-pressed="true">Crear nuevo Puesto</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelRiesgo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelMinimoSalario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelMaximoSalario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NivelRiesgo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NivelMinimoSalario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NivelMaximoSalario)
                </td>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Accion
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
