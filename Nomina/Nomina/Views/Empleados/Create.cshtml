@model Nomina.Models.CreateEmpleadoModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Crear nuevo Empleado</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDepartamento" class="control-label"></label>

                @Html.DropDownListFor(model => model.IdDepartamento, new SelectList(Model.Departamentos.OrderBy(x => x.Nombre), "Id", "Nombre"), "-- Seleccione un Departamento --", new { @class = "form-control" })
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPuesto" class="control-label"></label>

                @Html.DropDownListFor(model => model.IdPuesto, new SelectList(Model.Puestos.OrderBy(x => x.Nombre), "Id", "Nombre"), "-- Seleccione un Departamento --", new { @class = "form-control" })
                <span asp-validation-for="IdPuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalarioMensual" class="control-label"></label>
                <input asp-for="SalarioMensual" class="form-control" />
                <span asp-validation-for="SalarioMensual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista de Empleados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
