@model Nomina.Models.EditEmpleadoModel;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDepartamento" class="control-label"></label>

                @Html.DropDownListFor(model => model.IdDepartamento, new SelectList(Model.Departamentos.OrderBy(x => x.Nombre), "Id", "Nombre", Model.IdDepartamento), "-- Seleccione un Departamento --", new { @class = "form-control" })
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPuesto" class="control-label"></label>

                @Html.DropDownListFor(model => model.IdPuesto, new SelectList(Model.Puestos.OrderBy(x => x.Nombre), "Id", "Nombre", Model.IdPuesto), "-- Seleccione un Departamento --", new { @class = "form-control" })
                <span asp-validation-for="IdPuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalarioMensual" class="control-label"></label>
                <input asp-for="SalarioMensual" class="form-control" />
                <span asp-validation-for="SalarioMensual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado de Empleados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
